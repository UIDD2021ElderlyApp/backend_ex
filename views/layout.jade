doctype html
html
  head
    link(rel='apple-touch-icon' sizes='144x144' href='../modular_folder/login/image/loading.svg')
    link(rel='manifest' href='../manifest.json')
    link(href='/frontend_data/css/var.css' rel='stylesheet' type='text/css')
    - if(var_jade_user_info_choosedanimal=='-1') {
        meta(charset='utf8')
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='https://unpkg.com/swiper/swiper-bundle.min.css')
        title choose
        link(href='./frontend/choose/choose.css' rel='stylesheet' type='text/css')
    - } else {
        block content_head
    - }
    
  body
    header(style='display: none;')
      if errors
        each error, i in errors
          .div_alert_alert_danger(style='display: none;') #{error.msg}
      #snap_shoot_html2canvas_group(style='display: none;')
        button#snap_shoot_screen(style='display: none;') snap_shoot_screen
        #snap_shoot_finish(style='display: none;') -1
        #snap_shoot_canvas_tmp(style='display: none;')
      #error_msg_gui_group.error_msg_gui_group_class(style='display: none;')
        - if(var_jade_err_msg_show==true) {
            #error_msg_gui_start.error_msg_gui_group_class(style='display: none;') yes
            #error_msg_gui_text_1.error_msg_gui_group_class(style='display: none;') #{var_jade_error_msg_gui_text_1}
            //#error_msg_gui_text_1(style='display: none;') 錯誤
            #error_msg_gui_text_2.error_msg_gui_group_class(style='display: none;') #{var_jade_error_msg_gui_text_2}
            #error_msg_gui_word_part_color_1.error_msg_gui_group_class(style='display: none;') red
            #error_msg_gui_word_part_color_2.error_msg_gui_group_class(style='display: none;') black
        - } else {
            #error_msg_gui_start.error_msg_gui_group_class(style='display: none;') no
            #error_msg_gui_word_part_color_1.error_msg_gui_group_class(style='display: none;') black
            #error_msg_gui_word_part_color_2.error_msg_gui_group_class(style='display: none;') black
            #error_msg_gui_text_1.error_msg_gui_group_class(style='display: none;') this is a error msg_1
            #error_msg_gui_text_2.error_msg_gui_group_class(style='display: none;') this is a error msg_2
        - }
        #error_msg_gui_blank_part_color.error_msg_gui_group_class(style='display: none;') white
        #error_msg_gui_close.error_msg_gui_group_class(style='display: none;')
        #error_msg_gui_init_msg_if_yes.error_msg_gui_group_class(style='display: none;')
      #calc_var_vw(style='background-color: transparent;height:1px;width:calc(var(--var_vw));')
      #calc_var_right_global_displacement(style='background-color: transparent;height:1px;width:calc(var(--var_right_global_displacement));')
      #jade_user_info(style='display: none;')
        #jade_user_info_name(style='display: none;') #{var_jade_user_info_name}
        #jade_user_info_username(style='display: none;') #{var_jade_user_info_username}
        #jade_user_info_profileimage(style='display: none;') #{var_jade_user_info_profileimage}
        #jade_user_info_choosedanimal(style='display: none;') #{var_jade_user_info_choosedanimal}
      #is_a_squuuuuuuuuuuuuuare(style='display: none;') no
      - if(var_jade_user_info_choosedanimal!='-1') {
          block content_header
      - }
    #error_msg_obj(style='display: none;')
    - if(var_jade_user_info_choosedanimal=='-1') {
        #choose_text 請選擇您夥伴!
        #overall.swiper-container.mySwiper.swiper-container-initialized.swiper-container-horizontal.swiper-container-pointer-events
          #swiper-wrapper-10777a12e54cdc93f.swiper-wrapper(aria-live='polite' style='transition-duration: 0ms; transform: translate3d(-100%, 0px, 0px);')
            .swiper-slide.swiper-slide-prev(role='group' aria-label='1/3')
              #back1
              img(src='./frontend/choose/image/choose_back1_land.svg' style='position:absolute; width:100%; bottom:0%; z-index:2;')
              img(src='./frontend/choose/image/choose_back1_cloud.svg' style='position:absolute; width:100%; top:0%; z-index:1;')
              #animal1
                img(src='./frontend/choose/image/choose_animal1.svg' style='width:100%;')
            .swiper-slide.swiper-slide-active(role='group' aria-label='2/3')
              #back2_1
              #back2_2
              img(src='./frontend/choose/image/choose_back2_cloud.svg' style='position:absolute; width:100%; top:0%; z-index:1;')
              #sun
                img(src='./frontend/choose/image/choose_back2_sun.svg' style='width:100%;')
              img(src='./frontend/choose/image/choose_back2_sand.svg' style='position:absolute; width:100%; bottom:0%; z-index:3;')
              #animal2
                img(src='./frontend/choose/image/choose_animal2.svg' style='width:100%;')
              img(src='./frontend/choose/image/choose_back2_unbrella.svg' style='position:absolute; width:50%; right:0%; z-index:4')
            .swiper-slide.swiper-slide-next(role='group' aria-label='3/3')
              #back3
              img(src='./frontend/choose/image/choose_back3_cloud.svg' style='position:absolute; width:100%; top:0%; z-index:1;')
              img(src='./frontend/choose/image/choose_back3_land.svg' style='position:absolute; width:100%; bottom:0%; z-index:2;')
              #animal3
                img(src='./frontend/choose/image/choose_animal3.svg' style='width:100%;')
          span.swiper-notification(aria-live='assertive' aria-atomic='true')
    script.
        document.getElementsByTagName("body")[0].classList.add("vsc-initialized");
    - } else {
        block content_body
    - }
    footer(style='display: none;')
      //If the order of things in this block is changed, the elf will be angry
      
      - if(var_use_old_jquery==true) {
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
          script(type='text/javascript').
            var jQuery_3_6_0 = $.noConflict(true);
      - } else {
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
          script(type='text/javascript').
            var jQuery_3_6_0 = $.noConflict(true);
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js')
      - }   
      script(src='/frontend_data/index_layout.js')
      script(src='/frontend_data/index_err_msg.js')
      script(src='../javascripts/snapshoot_layout.js' type="module")
      - if(var_jade_user_info_choosedanimal=='-1') {
          script(src='https://unpkg.com/swiper/swiper-bundle.min.js')
          script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
          script(src='https://code.jquery.com/ui/1.12.1/jquery-ui.js')
          script(src='./frontend/choose/choose.js')
          script(src='./frontend_data/chooseanimal.js')
      - } else {
          block content_footer
      - }