            img(src='./frontend/biggggg/image/home_back2_sun.svg' style='height:100%;')
          img.desktop_width_100(src='./frontend/biggggg/image/home_back2_sand.svg' style='position:absolute; bottom:10%; z-index:3;')
          img.desktop_width_50(src='./frontend/biggggg/image/home_back2_unbrella.svg' style='position:absolute; right:calc(var(--var_right_global_displacement) + 0%); top:20%; z-index:4')
