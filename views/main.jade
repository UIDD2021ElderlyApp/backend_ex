              #coconut(style="left:10%;")
                img(src='./frontend/biggggg/image/home_back2_coconut.svg' style='width: 100%;')
          - } else {
              #coconut(style="left:25%;")
                img(src='./frontend/biggggg/image/home_back2_coconut.svg' style='width: 100%;')
          - }
      - } else if( var_jade_user_info_choosedanimal == "3") {
          #back3
          img.desktop_width_100(src='./frontend/biggggg/image/home_back3_cloud.svg' style='position:absolute; top:10%; z-index:1;')
          img.desktop_width_100(src='./frontend/biggggg/image/home_back3_land.svg' style='position:absolute; bottom:10%; z-index:2;')
      - } else {
          script.
            console.error("This is a serious error, please contact the software vendor");
      - }
    //#animal
