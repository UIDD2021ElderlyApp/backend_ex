              #tree(style="left:-2%;")
                img(src='./frontend/biggggg/image/home_back2_tree.svg' style='width: 100%;')
          - } else {
              #tree(style="left:25%;")
                img(src='./frontend/biggggg/image/home_back2_tree.svg' style='width: 100%;')
          - }
          //#tree
          //  img(src='./frontend/biggggg/image/home_back2_tree.svg' style='width: 100%;')
          //#coconut
          //  img(src='./frontend/biggggg/image/home_back2_coconut.svg' style='width: 100%;')
