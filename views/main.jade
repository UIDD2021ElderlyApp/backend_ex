    // post
    #post_html(style='position:absolute; top:0%; display:none;')
      #exit_button.button.exit_button_function_to_return_to_the_main_screen
      #upper_windows
        #new_post
          textarea#new_post_text(placeholder='打字打在這...' onfocus="this.placeholder = ''" onblur="this.placeholder = '打字打在這...'") #{var_app_PostTmp_get_pooptmmp}
          #new_post_button_block
            - if(var_app_PostTmp_get_poop_img_sel_tmmp) {
                #add_photo.button.glow(style='display:none;') 新增相片
            - } else {
                #add_photo.button(style='display:none;') 新增相片
            - }
            #new_post_button.button(style='display:none;') 發佈
        #browse_post
          // one post
          .post
            .poster_block
              .poster_photo
                img
              .post_detail
                .poster_name XXX
                .post_time OO OO OO
            .post_text
              | aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa
              br
              | aaaaaaaaaaaaaa
              br
              | aaaaaaaa
              br
              | aaaaaaaaaa
              br
              | aaaaaaa
            .post_photo
              img
            .comment_group
              .more_comment
              // one comment
              .comment(style='display: none;')
                .commenter_name OOO
                .comment_text XXXXXXXXXXXXXXXXX
            .new_comment_block
              .new_comment
                .your_name XXX
                input#new_comment_text(type='text' placeholder='留言...' onfocus="this.placeholder = ''" onblur="this.placeholder = '留言...'")
              .post_comment_button.button 發佈
    // setting
    #setting_html(style='position:absolute; top:0%; display:none;')
      // _1 : setting
      #exit_button_1.button.exit_button_function_to_return_to_the_main_screen
      #upper_windows_1
        #windows_tree_1
        #time_blocks
          #setting_title 設定
          #wakeup_block.time_block
            .time_font 起床時間
            .separate
            input#wakeup_hour.time(type='number' pattern='[0-9]*' inputmode='numeric')
            .colon :
            input#wakeup_minute.time(type='number' pattern='[0-9]*' inputmode='numeric')
          #sleep_block.time_block
            .time_font 睡覺時間
            .separate
            input#sleep_hour.time(type='number' pattern='[0-9]*' inputmode='numeric')
            .colon :
            input#sleep_minute.time(type='number' pattern='[0-9]*' inputmode='numeric')
        .setting_logout 
          a#logout_btn(href="/users/logout" target="_top" rel="noopener noreferrer") 登出
          p(style="font-size:0.5vh;")
          a#github_btn(href="https://github.com/UIDD2021ElderlyApp/backend_ex/" target="_blank" rel="noopener noreferrer") 聯絡我們
    // mission
    #mission_html(style='position:absolute; top:0%; display:none;')
      // _2 : mission
      #exit_button_2.button.exit_button_function_to_return_to_the_main_screen
